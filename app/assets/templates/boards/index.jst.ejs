<h1>Boards Index</h1>

<ul>
	<% boards.each(function(board){ %>
		<li>
      <a href="#/boards/<%= board.escape('id') %>"><%= board.escape("title") %></a>
      <button class="destroy btn btn-danger btn-sm" data-id="<%= board.escape("id") %>">delete</button>
    </li>
	<% }); %>
</ul>

<a href="#/boards/new">New Post</a>